<UserControl x:Class="Wpf_Dolgozat.Task3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="300">
    <Grid>
        <ListBox x:Name="DataListBox" SelectionChanged="DataListBox_SelectionChanged" Width="200"/>
        <StackPanel>
            <TextBox x:Name="DataTextBox" Width="200"/>
